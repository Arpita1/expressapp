{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,       // Important for Express imports
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true           // Often recommended to avoid mismatched type definitions in node_modules
  },
  "include": ["src"]               // Make sure it includes the folder where your .ts files live
}
